            chain.doFilter(request, response);
        } else {
        	/*StudentPersonalBean studentPersonalBean = (StudentPersonalBean)session.getAttribute("studentPersonalBean");
        	logger.debug("session destroyed :"+studentPersonalBean.getSurNames());
        	*/
            
//            logger.debug("CONTEXTO!! "+req.getContextPath() + "/login.xhtml");
//            logger.debug("Estatus req "+ res.getStatus());
            res.sendRedirect(req.getContextPath() + "/login.xhtml");
            //res.encodeRedirectUrl(req.getContextPath() + "/login.xhtml");
            
//            logger.debug("Paso forward");
            return;
        }

	}

