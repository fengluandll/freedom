        HttpSession session = req.getSession();
      /*  logger.debug("session.getAttribute "+session.getAttribute("studentPersonalBean"));
        logger.debug("req.getRequestURL().endsWith "+req.getRequestURL());
		*/
        if (session.getAttribute("studentPersonalBean") != null || req.getRequestURL().toString().endsWith("login.xhtml")
