</h:head>
<h:body>

 
<h:form id="frmPrueba">
	<p:dataGrid var="unit" value="#{dashJavaBasicoBean.listCurUni}" columns="3"
        rows="6" paginator="true"  
        paginatorTemplate="{CurrentPageReport}  {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"  
        rowsPerPageTemplate="3,6,9"> 
         <p:panel>
           <p:panelGrid id="gridUnits" style="width:280px;height:80px;text-align:center;" styleClass="borderCero"> 
            
            <f:facet name="header">
            <p:panel header="#{unit.unitName}" style="text-align:center;"/>
            <p:row>
                <p:column style="text-align: center;">
                   <h:outputText value="#{unit.unitName}" style="color:white;font-weight: normal;font-size:14px "/>
                 </p:column>
                </p:row>
            </f:facet>
            
              
            <p:row> 
            	<p:column>
                   <p:progressBar value="#{topicsCarouselBean.getUnitBarraGral(unit.unitId)}" 
                   				  widgetVar="barGral"
                   				  labelTemplate="{value}%" 
                   				  displayOnly="true"
                   				  styleClass="animated" 
                   				  global="false"
                   				  ajax="true">
                   	<p:ajax event="complete" />
                   	</p:progressBar>
                </p:column>
             </p:row>
             <p:row>
              <p:column>
               <p:panelGrid id="gridUnits2" style="width:280px;height:80px;text-align:center;" styleClass="borderCero">
               		<p:row>
               		    <p:column rowspan="2">
               		    <p:commandLink onclick="javascript:redirecciona(#{unit.unitId})"> 
               				<p:graphicImage value="/images/clase.png" title="Entrar al aula"/>
               			</p:commandLink>
               			</p:column>
               			<p:column>
               				<h:outputText value="Objetivo:" style="font-weight: bold;"/>
               			</p:column>
               		</p:row>
               		<p:row>
               		
               			<p:column>
               				<h:outputText value="#{unit.segment1}" escape="false" style="font-style: normal;color:#660000;"/>
               			</p:column>
               		</p:row>
               </p:panelGrid>
               </p:column>
 <!--             <p:column>     
  				<h:outputText value="Objetivo:" style="font-weight: bold;"/>
  			 </p:column>
  			 </p:row>
  			 <p:row> 
  			 <p:column>
                <h:outputText value="#{unit.segment1}" escape="false" style="font-style: italic;color:#660000;"/>
             </p:column>
--> 
             </p:row> 
              
            <f:facet name="footer">
              <p:row>
                <p:column style="text-align: center;">
                  <p:commandLink onclick="javascript:redirecciona(#{unit.unitId})"> 
                      <h:outputText value="Entrar al aula" style="color:white;font-weight: normal;font-size:14px"/>                      
				   </p:commandLink> 
                 </p:column>
                </p:row>
             </f:facet> 
            </p:panelGrid>  
          </p:panel>
        
             
    </p:dataGrid>

</h:form>
</h:body>
</html>